/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@cards/*": ["./src/app/components/cards/*"],
      "@charts": ["./src/app/charts/index/ts"],
      "@component/*": ["./src/app/components/*"],
      "@components/*": ["./src/app/components/index/ts"],
      "@experience/*": ["./src/app/components/experience/*"],
      "@framework/*": ["./src/app/components/framework/*"],
      "@constant/*": ["./src/app/constants/*"],
      "@constants": ["./src/app/constants/index/ts"],
      "@model/*": ["./src/app/models/*"],
      "@models": ["./src/app/models/index/ts"],
      "@pipe/*": ["./src/app/pipes/*"],
      "@pipes": ["./src/app/pipes/index/ts"],
      "@service/*": ["./src/app/services/*"],
      "@services": ["./src/app/services/index/ts"],
      "@store/*": ["./src/app/stores/*"],
      "@stores": ["./src/app/stores/index/ts"],
      "@util/*": ["./src/app/utils/*"],
      "@utils": ["./src/app/utils/index/ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
